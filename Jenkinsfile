pipeline {

    agent any

    tools {
        jdk 'jdk17'          // Jenkins JDK tool ID
        maven 'maven3'       // Jenkins Maven tool ID
    }

    environment {
        REPO_URL     = 'git@github.com:YahyaAf/DigiSupplyHub.git'
        CREDENTIALS  = 'github-ssh-yahyaaf'
        BRANCH       = 'main'
    }

    stages {

        /* â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
           1. Environment Setup
        â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€ */
        stage('Environment Check') {
            steps {
                echo "\u001B[34mğŸ”§ Checking Build Environment...\u001B[0m"
                sh '''
                    echo "â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”"
                    echo "Java Version:"
                    java -version
                    echo ""
                    echo "Maven Version:"
                    mvn -version
                    echo ""
                    echo "Git Version:"
                    git --version
                    echo "â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”"
                '''
            }
        }

        /* â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
           2. Clone Application Repository
        â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€ */
        stage('Clone Repository') {
            steps {
                echo "\u001B[36mğŸ“¥ Cloning Git Repository via SSH...\u001B[0m"

                git branch: env.BRANCH,
                    credentialsId: env.CREDENTIALS,
                    url: env.REPO_URL

                sh '''
                    echo "â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”"
                    echo "ğŸ“ Workspace Files:"
                    ls -la
                    echo "â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”"
                '''
            }
        }

        /* â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
           3. Git Commit Metadata
        â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€ */
        stage('Repository Info') {
            steps {
                echo "\u001B[35mğŸ” Extracting Repository Metadata...\u001B[0m"

                sh '''
                    echo "â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”"
                    BRANCH=$(git rev-parse --abbrev-ref HEAD)
                    COMMIT=$(git log -1 --pretty=format:"%h")
                    AUTHOR=$(git log -1 --pretty=format:"%an")
                    DATE=$(git log -1 --pretty=format:"%ad")
                    MESSAGE=$(git log -1 --pretty=format:"%s")

                    printf "%-15s %-40s\n" "Key" "Value"
                    printf "%-15s %-40s\n" "--------------" "-----------------------------"
                    printf "%-15s %-40s\n" "Branch" "$BRANCH"
                    printf "%-15s %-40s\n" "Commit" "$COMMIT"
                    printf "%-15s %-40s\n" "Author" "$AUTHOR"
                    printf "%-15s %-40s\n" "Date" "$DATE"
                    printf "%-15s %-40s\n" "Message" "$MESSAGE"
                    echo "â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”"
                '''
            }
        }

        /* â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
           4. Maven Build + Verify
        â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€ */
        stage('Build & Compile') {
            when { expression { fileExists('pom.xml') } }
            steps {
                echo "\u001B[33mâš™ï¸ Running Maven Build (clean install)...\u001B[0m"
                sh '''
                    mvn -ntp clean install -DskipTests
                '''
            }
        }

        /* â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
           5. Run Unit Tests in Parallel
        â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€ */
        stage('Tests') {
            when { expression { fileExists('pom.xml') } }
            parallel {
                stage('Unit Tests') {
                    steps {
                        echo "\u001B[32mğŸ§ª Running Unit Tests...\u001B[0m"
                        sh 'mvn -ntp test'
                    }
                }

                stage('Code Style Check') {
                    steps {
                        echo "\u001B[32mğŸ” Running Code Quality Checks...\u001B[0m"
                        sh '''
                            mvn -ntp checkstyle:check || echo "âš ï¸ Checkstyle warnings found"
                        '''
                    }
                }
            }
        }

        /* â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
           6. Package Application Artifact
        â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€ */
        stage('Packaging') {
            when { expression { fileExists('target') } }
            steps {
                echo "\u001B[36mğŸ“¦ Packaging Application Artifact...\u001B[0m"

                sh '''
                    echo "â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”"
                    ls -lh target/
                    echo "â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”"
                '''
            }
        }
    }

    /* â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
       POST ACTIONS
    â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€ */
    post {
        success {
            echo "\u001B[32mâœ… Pipeline executed successfully!\u001B[0m"
            echo "âœ” Git SSH OK"
            echo "âœ” Tools OK (JDK + Maven)"
            echo "âœ” Build OK"
            echo "âœ” Tests OK"
        }

        failure {
            echo "\u001B[31mâŒ Pipeline Failed\u001B[0m"
            echo "Check build logs, SSH credentials, or Maven configuration."
        }

        always {
            echo "\u001B[34mğŸ“˜ Pipeline Completed (Final stage)\u001B[0m"
        }
    }
}
